{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/splishsplash-backend-.log",

          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "splishsplash-backend"
    }
  },
  "AuthenticationSettings": {
    "Users": [
      {
        "LoginName": "admin",
        // Default password: SplishSplashAdmin
        // MD5 can be generated by https://www.md5hashgenerator.com/
        "PasswordMD5Hash": "f493940950caf02c726690b838cd1a73",
        "Role": "Administrator"
      }
    ] 
  },
  "AllowedHosts": "*"
}
